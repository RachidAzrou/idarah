{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/server.js": {
      "runtime": "@vercel/node@2.0.0",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/((?!api).*)", "destination": "/" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
